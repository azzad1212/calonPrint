<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#f5dad8"
                android:endColor="#f5dad8"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#f5dad8" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#f5dad8"
                android:startColor="#f5dad8"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#f5dad8" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#e5a39d"
                android:startColor="#e5a39d"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#e5a39d" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>