<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:padding="@dimen/margin_10dp"
        android:layout_weight="1"
        android:id="@+id/bag_no_text_view"
        android:text="Bag 1"
        android:textColor="@color/black_000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_weight="3"
        android:id="@+id/bag_weight_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_35dp"
        android:background="@drawable/digi_screen"
        android:padding="@dimen/margin_5dp"
        android:textColor="@color/black_000"/>

    <ImageView
        android:layout_weight="1"
        android:src="@mipmap/ic_close_round"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>

</LinearLayout>